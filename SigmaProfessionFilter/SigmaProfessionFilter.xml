<!-- <Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd"> -->
<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">

	<!-- Basic Functions -->
	<Script file="Utility.lua" />
	<Script file="Functions.lua" />
	
	<!-- Function Replacement -->
	<Script file="SigmaProfessionFilter.lua" />
	
	<!-- Dummy frame to allow OnLoad to happen -->
	<Frame name="SPF">
		<Scripts>
			<OnLoad>SPF_OnLoad()</OnLoad>
		</Scripts>
	</Frame>
	
	<!-- Professions -->
	<Script file="Enchanting.lua" />
	
	<!-- Left DropDown Menu -->
	<Script file="RightMenu.lua" />
	<Frame name="SPF_RightMenu" inherits="UIDropDownMenuTemplate" parent="CraftFrame" id="1">
		<Anchors>
			<Anchor point="TOPRIGHT">
				<Offset>
					<AbsDimension x="-25" y="-66"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Scripts>
			<OnLoad> SPF_RightMenu_OnLoad(self) </OnLoad>
			<OnShow> SPF_RightMenu_OnShow() </OnShow>
		</Scripts>
	</Frame>
	
	<!-- Right DropDown Menu -->
	<Script file="LeftMenu.lua" />
	<Frame name="SPF_LeftMenu" inherits="UIDropDownMenuTemplate" parent="CraftFrame" id="2">
		<Anchors>
			<Anchor point="RIGHT" relativeTo="SPF_RightMenu" relativePoint="LEFT">
				<Offset>
					<AbsDimension x="35" y="0"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Scripts>
			<OnLoad> SPF_LeftMenu_OnLoad() </OnLoad>
			<OnShow> SPF_LeftMenu_OnShow() </OnShow>
		</Scripts>
	</Frame>
	
	<!-- CheckButton to show the SearchBox -->
	<Script file="Search.lua" />
	<CheckButton name="SPF_Search" inherits="UICheckButtonTemplate" parent="CraftFrame" framelevel="4">
		<Anchors>
			<Anchor point="TOPLEFT">
				<Offset>
					<AbsDimension x="72" y="-54"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Size>
			<AbsDimension x="15" y="15"/>
		</Size>
		<HitRectInsets>
			<AbsInset left="0" right="-32" top="0" bottom="0"/>
		</HitRectInsets>
		<Scripts>
			<OnLoad> SPF_Search_OnLoad() </OnLoad>
			<OnShow> SPF_Search_OnShow() </OnShow>
			<OnClick> SPF_Search_OnClick() </OnClick>
			<OnEnter> SPF_Search_OnEnter() </OnEnter>
			<OnLeave> SPF_Search_OnLeave() </OnLeave>
		</Scripts>
	</CheckButton>
	
	<!-- Option1 -->
	<Script file="Option1.lua" />
	<CheckButton name="SPF_Option1" inherits="UICheckButtonTemplate" parent="CraftFrame" framelevel="4">
		<Anchors>
			<Anchor point="LEFT" relativeTo="SPF_SearchText" relativePoint="RIGHT">
				<Offset>
					<AbsDimension x="20" y="0"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Size>
			<AbsDimension x="15" y="15"/>
		</Size>
		<HitRectInsets>
			<AbsInset left="0" right="-60" top="0" bottom="0"/>
		</HitRectInsets>
		<Scripts>
			<OnLoad> SPF_Option1_OnLoad() </OnLoad>
			<OnClick> SPF_Option1_OnClick() </OnClick>
			<OnEnter> SPF_Option1_OnEnter() </OnEnter>
			<OnLeave> SPF_Option1_OnLeave() </OnLeave>
		</Scripts>
	</CheckButton>
	
	<!-- Option2 -->
	<Script file="Option2.lua" />
	<CheckButton name="SPF_Option2" inherits="UICheckButtonTemplate" parent="CraftFrame" framelevel="4">
		<Anchors>
			<Anchor point="LEFT" relativeTo="SPF_Option1Text" relativePoint="RIGHT">
				<Offset>
					<AbsDimension x="10" y="0"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Size>
			<AbsDimension x="15" y="15"/>
		</Size>
		<HitRectInsets>
			<AbsInset left="0" right="-60" top="0" bottom="0"/>
		</HitRectInsets>
		<Scripts>
			<OnLoad> SPF_Option2_OnLoad() </OnLoad>
			<OnClick> SPF_Option2_OnClick() </OnClick>
			<OnEnter> SPF_Option2_OnEnter() </OnEnter>
			<OnLeave> SPF_Option2_OnLeave() </OnLeave>
		</Scripts>
	</CheckButton>
	
	<!-- The actual SearchBox -->
	<Script file="SearchBox.lua" />
	<EditBox name="SPF_SearchBox" inherits="SearchBoxTemplate" parent="CraftFrame" autoFocus="false" framelevel="4">
		<Anchors>
			<Anchor point="TOPRIGHT">
				<Offset>
					<!-- <AbsDimension x="-44" y="-71"/> -->
					<AbsDimension x="-44" y="-67"/>
					<!-- <AbsDimension x="0" y="0"/> -->
				</Offset>
			</Anchor>
		</Anchors>
		<Size>
			<!-- <AbsDimension x="200" y="22"/> -->
			<AbsDimension x="260" y="27"/>
		</Size>
		<Scripts>
			<OnLoad inherit="prepend"> SPF_SearchBox_OnLoad() </OnLoad>
			<OnShow> SPF_SearchBox_OnShow() </OnShow>
			<OnTextChanged inherit="prepend"> SPF_SearchBox_OnTextChanged() </OnTextChanged>
			<OnEscapePressed> SPF_SearchBox_OnEscapePressed() </OnEscapePressed>
		</Scripts>
	</EditBox>
	
	<!-- Group by Left Menu -->
	<Script file="LeftSort.lua" />
	<CheckButton name="SPF_LeftSort" inherits="UICheckButtonTemplate" parent="CraftFrame" framelevel="4">
		<Anchors>
			<Anchor point="LEFT" relativeTo="SPF_LeftMenu">
				<Offset>
					<AbsDimension x="23" y="2"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Size>
			<AbsDimension x="15" y="15"/>
		</Size>
		<HitRectInsets>
			<AbsInset left="0" right="-90" top="0" bottom="0"/>
		</HitRectInsets>
		<Scripts>
			<OnLoad> SPF_LeftSort_OnLoad() </OnLoad>
			<OnShow> SPF_LeftSort_OnShow() </OnShow>
			<OnClick> SPF_LeftSort_OnClick() </OnClick>
			<OnEnter> SPF_LeftSort_OnEnter() </OnEnter>
			<OnLeave> SPF_LeftSort_OnLeave() </OnLeave>
		</Scripts>
	</CheckButton>
	
	<!-- Group by Right Menu -->
	<Script file="RightSort.lua" />
	<CheckButton name="SPF_RightSort" inherits="UICheckButtonTemplate" parent="CraftFrame" framelevel="4">
		<Anchors>
			<Anchor point="LEFT" relativeTo="SPF_RightMenu">
				<Offset>
					<AbsDimension x="23" y="2"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Size>
			<AbsDimension x="15" y="15"/>
		</Size>
		<HitRectInsets>
			<AbsInset left="0" right="-90" top="0" bottom="0"/>
		</HitRectInsets>
		<Scripts>
			<OnLoad> SPF_RightSort_OnLoad() </OnLoad>
			<OnShow> SPF_RightSort_OnShow() </OnShow>
			<OnClick> SPF_RightSort_OnClick() </OnClick>
			<OnEnter> SPF_RightSort_OnEnter() </OnEnter>
			<OnLeave> SPF_RightSort_OnLeave() </OnLeave>
		</Scripts>
	</CheckButton>
	
	<Script file="CraftFramePortraitChanger.lua" />
	<Frame name="SPF_PortraitChanger" parent="CraftFrame" enablemouse="1">
		<Scripts>
			<OnLoad>SPF_PortraitChanger_OnLoad(self)</OnLoad>
			<OnMouseDown>SPF_PortraitChanger_OnMouseDown()</OnMouseDown>
		</Scripts>
	</Frame>
</Ui>
